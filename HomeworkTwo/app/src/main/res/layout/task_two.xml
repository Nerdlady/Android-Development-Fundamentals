<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="@color/grey"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <android.support.v7.widget.RecyclerView

                android:layout_width="@dimen/type_width"
                android:layout_height="@dimen/all_recycle_view_height"
                android:layout_marginTop="58dp"
                android:id="@+id/vehicleTypeRecyclerView"
                android:background="@drawable/sofbus_recycle_view"
                android:layout_alignParentTop="true"
                android:textAlignment="center"
                android:layout_alignLeft="@+id/fisrtLastStopsRecyclerView"
                android:layout_alignStart="@+id/fisrtLastStopsRecyclerView">

            </android.support.v7.widget.RecyclerView>


            <android.support.v7.widget.RecyclerView
                android:layout_width="@dimen/all_recycle_view_height"
                android:id="@+id/busNumberRecuclerView"
                android:layout_height="@dimen/all_recycle_view_height"
                android:layout_marginLeft="33dp"
                android:layout_marginStart="33dp"
                android:layout_alignTop="@+id/vehicleTypeRecyclerView"
                android:layout_toRightOf="@+id/vehicleTypeRecyclerView"
                android:background="@drawable/sofbus_recycle_view"
                android:layout_alignRight="@+id/fisrtLastStopsRecyclerView"
                android:layout_alignEnd="@+id/fisrtLastStopsRecyclerView">

            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView

                android:layout_width="@dimen/stops_width"
                android:layout_height="@dimen/all_recycle_view_height"
                android:id="@+id/fisrtLastStopsRecyclerView"
                android:background="@drawable/sofbus_recycle_view"
                android:layout_below="@+id/vehicleTypeRecyclerView"
                android:layout_alignLeft="@+id/button10"
                android:layout_alignStart="@+id/button10"
                android:layout_marginTop="37dp">

            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:layout_width="@dimen/stops_width"
                android:layout_height="@dimen/all_recycle_view_height"
                android:layout_marginTop="37dp"
                android:id="@+id/stopsRecyclerView"
                android:background="@drawable/sofbus_recycle_view"
                android:layout_below="@+id/fisrtLastStopsRecyclerView"
                android:layout_alignLeft="@+id/fisrtLastStopsRecyclerView"
                android:layout_alignStart="@+id/fisrtLastStopsRecyclerView"
                >

            </android.support.v7.widget.RecyclerView>

            <Button
                android:layout_width="@dimen/stops_width"
                android:layout_height="@dimen/softbus_button_height"
                android:text="@string/time_arives"
                android:id="@+id/button10"
                android:layout_below="@+id/stopsRecyclerView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:background="@drawable/sofbus_recycle_view"/>

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/sofbus"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageButton
                style="@android:style/Widget.Holo.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button11"
                android:src="@android:drawable/ic_menu_mapmode"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                style="@android:style/Widget.Holo.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button12"
                android:src="@android:drawable/btn_star"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/button11"
                android:layout_toStartOf="@+id/button11" />

            <ImageButton
                style="@android:style/Widget.Holo.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button13"
                android:src="@android:drawable/ic_menu_mylocation"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/button12"
                android:layout_toStartOf="@+id/button12" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:background="@drawable/sofbus_logo"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
</RelativeLayout>